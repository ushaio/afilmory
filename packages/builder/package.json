{
  "name": "@afilmory/builder",
  "type": "module",
  "version": "0.2.2",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*"
  },
  "scripts": {
    "build": "tsdown",
    "bump": "nbump",
    "cli": "tsx src/cli.ts"
  },
  "dependencies": {
    "@vingle/bmp-js": "^0.2.5",
    "blurhash": "2.0.5",
    "c12": "^3.3.2",
    "dotenv-expand": "catalog:",
    "execa": "9.6.1",
    "exiftool-vendored": "33.5.0",
    "fast-xml-parser": "5.3.2",
    "heic-convert": "2.1.0",
    "heic-to": "1.3.0",
    "sharp": "0.34.5",
    "thumbhash": "0.1.1"
  },
  "devDependencies": {
    "@afilmory/utils": "workspace:*",
    "tsdown": "0.17.0"
  },
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.mjs",
    "exports": {
      ".": {
        "types": "./dist/index.d.mts",
        "import": "./dist/index.mjs"
      },
      "./*": {
        "types": "./dist/*.d.mts",
        "import": "./dist/*.mjs"
      }
    }
  }
}
